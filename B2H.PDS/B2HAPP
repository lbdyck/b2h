  MVSALLOC.:pv.name:epv.='ALLOC-command-operands'
  OUTPUTP=:pv.physical-output-file:epv.                  (new operands for MVS)&cont.
 (:hp1.R4.01:ehp1.)
  PROCACT='NOINDEX=:pv.action:epv. ...'                  (new situation)
  SYNFONT=&lbrc. YES | :pk def.NO:epk. &rbrc. &cont.
                         (:hp1.R4.02:ehp1.)
:exmp.
